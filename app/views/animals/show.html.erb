<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @animal.name %>
</p>

<p>
  <strong>Latin name:</strong>
  <%= @animal.latin_name %>
</p>

<p>
  <strong>Kingdom:</strong>
  <%= @animal.kingdom %>
</p>

<p>
  <ul>
    <h3> Sightings </h3>
    <% @animal.sightings.each do |sighting| %>
      <li>
        <%= sighting.date %> <%= sighting.lat.to_s %> <%= sighting.long.to_s %>
      </li>
    <% end %>
  </ul>
</p>

<%= link_to 'New Sighting', new_sighting_path() + "?animal_id=" + @animal.id.to_s %>

<%= link_to 'Edit', edit_animal_path(@animal) %> |
<%= link_to 'Back', animals_path %>
